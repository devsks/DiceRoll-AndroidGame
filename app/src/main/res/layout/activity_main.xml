<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topMsg"
        android:text="@string/topMessage"
        android:textSize="24.5sp"
        android:gravity="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="316dp"
        android:id="@+id/diceImage"
        android:src="@drawable/dicerolling"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/roll"
            android:text="ROLL"
            style="@style/Widget.Design.FloatingActionButton"
            android:backgroundTint="@android:color/holo_orange_light" />
        <Button
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/hold"
            android:text="HOLD"
            style="@style/Widget.Design.FloatingActionButton"
            android:backgroundTint="@android:color/holo_green_light" />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/reset"
            android:text="RESET"
            style="@style/Widget.Design.FloatingActionButton"
            android:backgroundTint="@android:color/holo_red_light" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/userCurrent"
            android:text="Your Current Score : 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/andiCurrent"
            android:text="Andy's Current Score : 0"
            android:gravity="right"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="0.16">
        <TextView
            android:id="@+id/userTotal"
            android:text="Your Total Score : 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/andyTotal"
            android:text="Andy's Total Score : 0"
            android:gravity="right"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>

</LinearLayout>
